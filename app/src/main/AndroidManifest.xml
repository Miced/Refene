<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nosfistis.mike.refene"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".refene.RefenesActivity"
            android:label="@string/title_activity_refene_details"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nosfistis.mike.refene.MainActivity"
                />
        </activity>
        <activity
            android:name=".refene.PersonalBidsActivity"
            android:label="@string/title_activity_personal_bids"
            android:parentActivityName=".refene.RefenesActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".refene.RefenesActivity"
                />
        </activity>
        <activity
            android:name=".refene.NewPurchaseActivity"
            android:label="@string/title_activity_new_purchase"
            android:parentActivityName=".refene.RefenesActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nosfistis.mike.refene.refene.RefenesActivity"
                />
        </activity>
    </application>

</manifest>